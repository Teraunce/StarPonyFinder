{"name":"|Stone Step","type":"feat","img":"icons/svg/item-bag.svg","system":{"description":{"chat":"","gmnotes":"","short":"","value":"<p><span class=\"fontstyle2\">You can @UUID[Compendium.sfrpg.universal-creature-rules.pmp74ICOgJ9UaiNV]{earth glide} as per the universal monster ability and gain a burrow speed of 20 feet. At 4th level and every four levels thereafter, your burrow speed increases by 5 feet (to 45 feet at 20th level).</span></p>","unidentified":""},"source":"","type":"","activation":{"type":"","cost":0,"condition":""},"duration":{"value":null,"units":""},"target":{"value":null,"type":""},"area":{"value":0,"units":"","shape":"","effect":""},"range":{"value":null,"units":"","additional":"","per":""},"uses":{"value":0,"max":0,"per":null},"isActive":null,"ability":null,"actionTarget":"","actionType":"","attackBonus":0,"chatFlavor":"","rollNotes":"","damageNotes":"","critical":{"parts":[],"effect":""},"damage":{"parts":[]},"formula":"","save":{"type":"","dc":null,"descriptor":""},"descriptors":{"acid":false,"air":false,"calling":false,"chaotic":false,"charm":false,"cold":false,"compulsion":false,"creation":false,"curse":false,"darkness":false,"death":false,"disease":false,"earth":false,"electricity":false,"emotion":false,"evil":false,"fear":false,"fire":false,"force":false,"good":false,"healing":false,"language-dependent":false,"lawful":false,"light":false,"mind-affecting":false,"pain":false,"poison":false,"polymorph":false,"radiation":false,"scrying":false,"sense-dependent":false,"shadow":false,"sonic":false,"summoning":false,"teleportation":false,"water":false},"modifiers":[{"name":"Stone Step","modifier":"20+(floor(@details.level.value/4)*5)","type":"untyped","effectType":"specific-speed","valueAffected":"burrowing","enabled":true,"source":"","notes":"","modifierType":"constant","condition":"","subtab":"misc","max":20,"_id":"9733cc0b-60a8-47af-a02a-8a4650962d9b"}],"requirements":"","recharge":{"value":null,"charged":false},"abilityMods":{"parts":[]}},"