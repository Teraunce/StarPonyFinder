{"name":"@Wind Beneath Wings","type":"feat","img":"icons/svg/item-bag.svg","system":{"description":{"chat":"","gmnotes":"","short":"","value":"<p><span class=\"fontstyle2\">Once per day, you can direct the flow of air around you to boost the flight of allies by 20 feet and their airborne maneuverability by two levels. You can affect a number of targets equal to your Dexterity modifier and it persists for 1 hour. You must be 11th level to select this planar gift.</span></p>","unidentified":""},"source":"","type":"","activation":{"type":"action","cost":1,"condition":""},"duration":{"value":"1 hour","units":""},"target":{"value":"Up to your Dexterity Modifier allies","type":""},"area":{"value":null,"units":"none","shape":"","effect":""},"range":{"value":null,"units":"none","additional":"","per":""},"uses":{"value":1,"max":1,"per":"day"},"isActive":null,"ability":null,"actionTarget":"","actionType":"","attackBonus":0,"chatFlavor":"","rollNotes":"","damageNotes":"","critical":{"parts":[],"effect":""},"damage":{"parts":[]},"formula":"","save":{"type":"","dc":null,"descriptor":""},"descriptors":{"acid":false,"air":false,"calling":false,"chaotic":false,"charm":false,"cold":false,"compulsion":false,"creation":false,"curse":false,"darkness":false,"death":false,"disease":false,"earth":false,"electricity":false,"emotion":false,"evil":false,"fear":false,"fire":false,"force":false,"good":false,"healing":false,"language-dependent":false,"lawful":false,"light":false,"mind-affecting":false,"pain":false,"poison":false,"polymorph":false,"radiation":false,"scrying":false,"sense-dependent":false,"shadow":false,"sonic":false,"summoning":false,"teleportation":false,"water":false},"modifiers":[],"requirements":"","recharge":{"value":null,"charged":false},"abilityMods":{"parts":[]}},"effects":[],"flags":{},"_stats":{"systemId":"sfrpg","systemVersion":"0.22.0","coreVersion":"10.291","createdTime":1672520064858,"modifiedTime":1673334668473,"lastModifiedBy":"7Idr7n4PmaIACOqY"},"_id":"qUdD7V5ms