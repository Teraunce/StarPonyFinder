{"name":"@Targeted the Warhead","type":"feat","img":"icons/svg/item-bag.svg","system":{"description":{"chat":"","gmnotes":"","short":"","value":"<p><span class=\"fontstyle2\">As a move action you can use air currents to direct and speed ammunition toward its target. Until the beginning of your next turn, a single ranged weapon within 30 feet gains an enhancement bonus to attack and damage rolls equal to your Wisdom modifier, and its range increment is doubled. At 7th level and above you can activate this ability as a swift action.</span></p>","unidentified":""},"source":"","type":"","activation":{"type":"move","cost":1,"condition":""},"duration":{"value":"until your next turn","units":""},"target":{"value":"1 ranged weapon","type":""},"area":{"value":null,"units":"none","shape":"","effect":""},"range":{"value":30,"units":"ft","additional":"","per":""},"uses":{"value":0,"max":0,"per":""},"isActive":null,"ability":null,"actionTarget":"","actionType":"","attackBonus":0,"chatFlavor":"","rollNotes":"","damageNotes":"","critical":{"parts":[],"effect":""},"damage":{"parts":[]},"formula":"","save":{"type":"","dc":null,"descriptor":""},"descriptors":{"acid":false,"air":false,"calling":false,"chaotic":false,"charm":false,"cold":false,"compulsion":false,"creation":false,"curse":false,"darkness":false,"death":false,"disease":false,"earth":false,"electricity":false,"emotion":false,"evil":false,"fear":false,"fire":false,"force":false,"good":false,"healing":false,"language-dependent":false,"lawful":false,"light":false,"mind-affecting":false,"pain":false,"poison":false,"polymorph":false,"radiation":false,"scrying":false,"sense-dependent":false,"shadow":false,"sonic":false,"summoning":false,"teleportation":false,"water":false},"modifiers":[],"requirements":"","recharge":{"value":null,"charged":false},"abilityMods":{"parts":[]}},"effects":[],"flags":{},"_stats":{"systemId":"sfrpg","systemVersion":"0.22.0","coreVersion":"10.291","createdTime":1672520229376,"modifiedTime":1673334668473