{"name":"\\Fluid Tongue","type":"feat","img":"icons/svg/item-bag.svg","system":{"description":{"chat":"","gmnotes":"","short":"","value":"<p><span class=\"fontstyle2\">You gain Aquan as a language and all creatures with the water subtype automatically begin with an attitude of at least unfriendly. You gain a +5 insight bonus on Diplomacy checks against creatures with the water subtype. At 7th level and above you can breathe water as well as air.</span></p>","unidentified":""},"source":"","type":"","activation":{"type":"","cost":0,"condition":""},"duration":{"value":null,"units":""},"target":{"value":null,"type":""},"area":{"value":0,"units":"","shape":"","effect":""},"range":{"value":null,"units":"","additional":"","per":""},"uses":{"value":0,"max":0,"per":null},"isActive":null,"ability":null,"actionTarget":"","actionType":"","attackBonus":0,"chatFlavor":"","rollNotes":"","damageNotes":"","critical":{"parts":[],"effect":""},"damage":{"parts":[]},"formula":"","save":{"type":"","dc":null,"descriptor":""},"descriptors":{"acid":false,"air":false,"calling":false,"chaotic":false,"charm":false,"cold":false,"compulsion":false,"creation":false,"curse":false,"darkness":false,"death":false,"disease":false,"earth":false,"electricity":false,"emotion":false,"evil":false,"fear":false,"fire":false,"force":false,"good":false,"healing":false,"language-dependent":false,"lawful":false,"light":false,"mind-affecting":false,"pain":false,"poison":false,"polymorph":false,"radiation":false,"scrying":false,"sense-dependent":false,"shadow":false,"sonic":false,"summoning":false,"teleportation":false,"water":false},"modifiers":[],"requirements":"","recharge":{"value":null,"charged":false},"abilityMods":{"parts":[]}},"effects":[],"flags":{},"_stats":{"systemId":"sfrpg","systemVersion":"0.22.0","coreVersion":"10.291","createdTime":1672542084939,"modifiedTime":1673334668474,"lastModifiedBy":"7Idr7n4PmaIACOqY"},"_id":"LhTRj1fp371bk2rh","folder":null,"sort":0,"ownership":{"default":0,"7Idr7n4PmaIACOq