{"name":"(Nuclear Punches","type":"feat","img":"icons/svg/item-bag.svg","system":{"description":{"chat":"","gmnotes":"","short":"","value":"<p><span class=\"fontstyle2\">Your melee strikes land with a flash of ionizing radiation. Deadly, but thankfully shortlived, you inflict an extra 1d4 damage. Creatures immune to radiation or poison ignore this extra damage.</span></p>","unidentified":""},"source":"","type":"","activation":{"type":"","cost":0,"condition":""},"duration":{"value":null,"units":""},"target":{"value":null,"type":""},"area":{"value":0,"units":"","shape":"","effect":""},"range":{"value":null,"units":"","additional":"","per":""},"uses":{"value":0,"max":0,"per":null},"isActive":null,"ability":null,"actionTarget":"","actionType":"","attackBonus":0,"chatFlavor":"","rollNotes":"","damageNotes":"","critical":{"parts":[],"effect":""},"damage":{"parts":[]},"formula":"","save":{"type":"","dc":null,"descriptor":""},"descriptors":{"acid":false,"air":false,"calling":false,"chaotic":false,"charm":false,"cold":false,"compulsion":false,"creation":false,"curse":false,"darkness":false,"death":false,"disease":false,"earth":false,"electricity":false,"emotion":false,"evil":false,"fear":false,"fire":false,"force":false,"good":false,"healing":false,"language-dependent":false,"lawful":false,"light":false,"mind-affecting":false,"pain":false,"poison":false,"polymorph":false,"radiation":false,"scrying":false,"sense-dependent":false,"shadow":false,"sonic":false,"summoning":false,"teleportation":false,"water":false},"modifiers":[],"requirements":"","recharge":{"value":null,"charged":false},"abilityMods":{"parts":[]}},"effects":[],"flags":{},"_stats":{"systemId":"sfrpg","systemVersion":"0.22.0","coreVersion":"10.291","createdTime":1672533223308,"modifiedTime":1673334668469,"lastModifiedBy":"7Idr7n4PmaIACOqY"},"_id":"Tt8XIbyORbLO3BmR","folder":null,"sort":0,"ownership":{"default":0,"7Idr7n4PmaIACOqY":3}}
{"name":"@Foul Air","type":"feat","img":"icons/svg/item-bag.svg","system":{"description":{"chat":"","gmnotes":"","short":"","value":"<p><span class=\"fontstyle2\">As a standard action, you turn the air around you putrid and unbreathable. The cloud operates as @UUID[Item.BzB2ubEWCb9k900b]{Stinking Cloud}</span><span class=\"fontstyle4\"> </span><span class=\"fontstyle2\">(cast level equal to elementalist level) except it emanates directly outwards from you. You are immune to this effect. You can use this ability a number of times a day equal to your Wisdom modifier.</span></p><p><span class=\"fontstyle2\">You must be 7th level to select this planar gift.</span></p>","unidentified":""},"source":"","type":"","activation":{"type":"","cost":0,"condition":""},"duration":{"value":null,"units":""},"target":{"value":null,"type":""},"area":{"value":0,"units":"","shape":"","effect":""},"range":{"value":null,"units":"","additional":"","per":""},"uses":{"value":0,"max":0,"per":null},"isActive":null,"ability":null,"actionTarget":"","actionType":"","attackBonus":0,"chatFlavor":"","rollNotes":"","damageNotes":"","critical":{"parts":[],"effect":""},"damage":{"parts":[]},"formula":"","save":{"type":"","dc":null,"descriptor":""},"descriptors":{"acid":false,"air":false,"calling":false,"chaotic":false,"charm":false,"cold":false,"compulsion":false,"creation":false,"curse":false,"darkness":false,"death":false,"disease":false,"earth":false,"electricity":false,"emotion":false,"evil":false,"fear":false,"fire":false,"force":false,"good":false,"healing":false,"language-dependent":false,"lawful":false,"light":false,"mind-affecting":false,"pain":false,"poison":false,"polymorph":false,"radiation":false,"scrying":false,"sense-dependent":false,"shadow":false,"sonic":false,"summoning":false,"teleportation":false,"water":false},"modifiers":[],"requirements":"","recharge":{"value":null,"charged":false},"abilityMods":{"parts":[]}},"effects":[],"flags":{},"_stats":{"systemId":"sfrpg","systemVersion":"0.