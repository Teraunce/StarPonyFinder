{"name":"\\Water's Blessing","type":"feat","img":"icons/svg/item-bag.svg","system":{"description":{"chat":"","gmnotes":"","short":"","value":"<p><span class=\"fontstyle2\">Once per day, you can rend open a direct conduit to the Plane of Water and channel the leaking energy to yourself and allies within 30 feet.</span></p><p><span class=\"fontstyle2\">All targets gain damage reduction 1/piercing + DR 1/piercing per two elementalist levels. This ability lasts for 1 hour.</span></p><p><span class=\"fontstyle2\">You must be at least 13th level to select this planar gift.</span></p>","unidentified":""},"source":"","type":"","activation":{"type":"action","cost":1,"condition":""},"duration":{"value":"1 hour","units":""},"target":{"value":"Allies and self in area","type":""},"area":{"value":30,"units":"ft","shape":"sphere","effect":"burst"},"range":{"value":null,"units":"personal","additional":"","per":""},"uses":{"value":1,"max":1,"per":"day"},"isActive":null,"ability":null,"actionTarget":"","actionType":"","attackBonus":0,"chatFlavor":"","rollNotes":"","damageNotes":"","critical":{"parts":[],"effect":""},"damage":{"parts":[]},"formula":"","save":{"type":"","dc":null,"descriptor":""},"descriptors":{"acid":false,"air":false,"calling":false,"chaotic":false,"charm":false,"cold":false,"compulsion":false,"creation":false,"curse":false,"darkness":false,"death":false,"disease":false,"earth":false,"electricity":false,"emotion":false,"evil":false,"fear":false,"fire":false,"force":false,"good":false,"healing":false,"language-dependent":false,"lawful":false,"light":false,"mind-affecting":false,"pain":false,"poison":false,"polymorph":false,"radiation":false,"scrying":false,"sense-dependent":false,"shadow":false,"sonic":false,"summoning":false,"teleportation":false,"water":false},"modifiers":[],"requirements":"","recharge":{"value":null,"charged":false},"abilityMods":{"parts":[]}},"effects":[],"flags":{},"_stats":{"systemId":"sfrpg","systemVersion":"0.22.0","coreVersion":"10.291","crea